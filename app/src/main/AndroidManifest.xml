<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jecihjoy.pharmacyasistant">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/med11"
        android:label="@string/app_name"
        android:roundIcon="@drawable/med11"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NewUserActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".HomeActivity" />
        <activity android:name=".AddMedsActivity" />
        <activity android:name=".MedsUpdatesActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".ManipulateMedActivity" />
        <activity android:name=".MinimumMedsActivity" />
        <activity android:name=".MedsReplacementsActivity" />
        <activity android:name=".AddReplacementsActivity" />
        <activity android:name=".ContradictionsActivity" />
        <activity android:name=".AddContradictionsActivity" />
        <activity android:name=".AddNewMedsActivity" />
        <activity android:name=".NewMedsActivity" />
        <activity
            android:name=".HomeAdminActivity"
            android:label="@string/title_activity_home_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".UserLoginActivity" />
        <activity android:name=".GoogleMaps.GooglePlacesActivity" />
        <activity
            android:name=".GoogleMaps.NewMapActivity"
            android:label="@string/title_activity_new_map"></activity>
    </application>

</manifest>